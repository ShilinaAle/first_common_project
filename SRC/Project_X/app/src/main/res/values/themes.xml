<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Project_X" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- StatusActivity bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="logoSrc">@drawable/logo_shark</item>
    </style>

    <style name="Theme.Project_X_enot"  parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/enot1</item>
        <item name="colorPrimaryVariant">@color/enotDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/enot2</item>
        <item name="colorSecondaryVariant">@color/enotoOnSecDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- StatusActivity bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="backgroundTint">@color/enotDark</item>
        <item name="logoSrc">@drawable/logo_enot</item>
    </style>

    <style name="Theme.Project_X_pantera"  parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color.
        <item name="colorOnBackground">#63636a</item> -->
        <!--<item name="android:text">@color/white</item>-->
        <item name="colorAccent">@color/white</item>
        <!--фон-->
        <item name="android:colorBackground">@color/pantera_back</item>
        <!--> поля в звонках-->
        <item name="backgroundTint">@color/black</item>
        <!--> -->
        <item name="colorOnBackground">@color/white</item>
        <item name="colorPrimary">#39393f</item>
        <!--верхняя шапка-->
        <item name="colorPrimaryVariant">#464650</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#3c3a43</item>
        <item name="colorSecondaryVariant">#464650</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:toolbarStyle">@color/pantera_back</item>
        <item name="tooltipFrameBackground">@color/pantera_back</item>

        <!-- StatusActivity bar color.-->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>